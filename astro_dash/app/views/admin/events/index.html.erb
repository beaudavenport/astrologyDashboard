<h1>Listing services</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
 
  <% @services.each do |service| %>
    <tr>
      <td><%= service.name %></td>
      <td><%= service.description %></td>
      <td><%= service.price %></td>
      <td><%= link_to 'Show', admin_service_path(service) %></td>
      <td><%= link_to 'Edit', edit_admin_service_path(service) %></td>
      <td><%= link_to 'Destroy', admin_service_path(service), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Service', new_admin_service_path %>