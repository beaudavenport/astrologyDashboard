<h1>Listing content pages</h1>
 
<table>
  <tr>
    <th>Heading</th>
    <th>Body</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
 
  <% @content_pages.each do |page| %>
    <tr>
      <td><%= page.heading%></td>
      <td><%= page.body %></td>
      <td><%= page.category %></td>
      <td><%= link_to 'Show', admin_content_page_path(page) %></td>
      <td><%= link_to 'Edit', edit_admin_content_page_path(page) %></td>
      <td><%= link_to 'Destroy', admin_content_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New content page', new_admin_content_page_path %>