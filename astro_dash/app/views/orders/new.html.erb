<h2>Place an Order</h2>
<h3><%= @order.service.name %></h3>
<h3><%= @order.service.price %></h3>
<%= form_for @order do |o| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited
        this order from being saved:</h2>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
      <%= o.label :customer %><br />
      <%= o.text_field :customer %>
  </p>
  <p>
    <%= o.label :email %><br />
    <%= o.email_field :email %>
  </p>
  <%= o.hidden_field :customer_info %>
  <%= render 'shared/lite_editor' %>
  <%= o.hidden_field :service_id %>
  <p>
    <%= o.submit %>
  </p>
  <p><%= debug(@order) %></p>
<% end %>
